<h1>Eat The Burger</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-6">
      <ul>
        {{#each burgers}}
        <li>
        <p>
        {{this.id}}. {{this.burger}}

        <button data-burgerid="{{this.id}}" class="delburger">Delete</button>
        </p>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <form id="addburger" class="button-size">
	  <textarea type="text" name="burger"></textarea>
    <button type="submit" class="btn btn-danger">Add Burger!</button>
    <h4>Add a burger you would like to eat.</h4>
    </form>
  </div>
</div>

